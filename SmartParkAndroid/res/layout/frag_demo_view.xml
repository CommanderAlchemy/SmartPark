<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/isBTEnable"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/section_label"
        android:layout_alignTop="@+id/section_label"
        android:onClick="isBTEnable"
        android:text="is BT enable" />

    <Button
        android:id="@+id/queryPairedDevices"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/isBTEnable"
        android:layout_alignRight="@+id/isBTavailable"
        android:layout_below="@+id/isBTEnable"
        android:onClick="pairedDevicesCount"
        android:text="how many paired" />

    <TextView
        android:id="@+id/textOutput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/isBTavailable"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/queryPairedDevices"
        android:layout_alignRight="@+id/textOutput"
        android:onClick="isBTavailable"
        android:text="isBTavailable" />

    <TextView
        android:id="@+id/GPSInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/GPS_Stop"
        android:text="@string/GPS_Start" />

    <Button
        android:id="@+id/GPS_Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_toLeftOf="@+id/isBTavailable"
        android:onClick="endGPS"
        android:text="GPS Stop" />

    <Button
        android:id="@+id/GPS_Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/GPS_Stop"
        android:layout_centerVertical="true"
        android:onClick="startGPS"
        android:text="GPS Start" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/GPS_Stop"
        android:layout_marginTop="51dp"
        android:layout_toRightOf="@+id/isBTEnable"
        android:hint="Â¤" />

</RelativeLayout>